<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title:-</label>
            <input class="form-control" type="text" name="listing[title]" id="" placeholder="enter title" required>
            <div class="invalid-feedback">Title short be valide</div>
        </div>  

        <div class="mb-3">
            <label class="form-label" for="description">Description:-</label>
            <textarea class="form-control" name="listing[description]" id="" cols="" rows="" placeholder="enter description" required></textarea>
            <div class="invalid-feedback">Description short be valide</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="image">Upload Listing Image:-</label>
            <input class="form-control" type="file" name="listing[image]" id="">
            required
        </div>

        <div class="row">
        <div class="mb-3 col-md-4">
            <label class="form-label" for="price">Price:-</label>
            <input class="form-control" type="" name="listing[price]" id="" placeholder="1200" required>
            <div class="invalid-feedback">Enter a valide price</div>
        </div>

        <div class="mb-3 col-md-8">
            <label class="form-label" for="country">Country:-</label>
            <input class="form-control" type="text" name="listing[country]" id="" placeholder="India" required>
            <div class="invalid-feedback">Country short be valide</div>
        </div> 
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Location:-</label>
            <input class="form-control" type="text" name="listing[location]" id="" placeholder="Jaipur Rajasthan" required>
            <div class="invalid-feedback">Location short be valide</div>
        </div>

        <br><br>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
    <br>
    </div>
</div>